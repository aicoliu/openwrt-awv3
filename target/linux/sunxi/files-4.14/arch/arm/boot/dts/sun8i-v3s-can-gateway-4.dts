/dts-v1/;
#include "sun8i-v3s.dtsi"
#include "sunxi-common-regulators.dtsi"

/ {
	model = "CAN Gateway 4";
	compatible = "peace,can-gatewat-4", "allwinner,sun8i-v3s";

	aliases {
		serial0 = &uart0;
		ethernet0 = &emac;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	leds {
		compatible = "gpio-leds";

		led_can0_run {
			label = "can0_run";
			gpios = <&pio 4 23 GPIO_ACTIVE_LOW>; /* PE23 */
		};

		led_can0_err {
			label = "can0_err";
			gpios = <&pio 4 24 GPIO_ACTIVE_LOW>; /* PE24 */
		};

		led_can1_run {
			label = "can1_run";
			gpios = <&pio 6 0 GPIO_ACTIVE_LOW>; /* PG0 */
		};

		led_can1_err {
			label = "can1_err";
			gpios = <&pio 6 1 GPIO_ACTIVE_LOW>; /* PG1 */
		};

		led_can2_run {
			label = "can2_run";
			gpios = <&pio 6 2 GPIO_ACTIVE_LOW>; /* PG2 */
		};

		led_can2_err {
			label = "can2_err";
			gpios = <&pio 6 3 GPIO_ACTIVE_LOW>; /* PG3 */
		};

		led_can3_run {
			label = "can3_run";
			gpios = <&pio 6 4 GPIO_ACTIVE_LOW>; /* PG4 */
		};

		led_can3_err {
			label = "can3_err";
			gpios = <&pio 6 5 GPIO_ACTIVE_LOW>; /* PG5 */
		};

		led_sys_run {
			label = "sys_run";
			gpios = <&pio 4 19 GPIO_ACTIVE_LOW>; /* PE19 */
			/* default-state = "on"; */
		};

		led_sys_err {
			label = "sys_err";
			gpios = <&pio 4 20 GPIO_ACTIVE_LOW>; /* PE20 */
		};
	};
};

&mmc0 {
	pinctrl-0 = <&mmc0_pins>;
	pinctrl-names = "default";
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";
};

&uart0 {
	pinctrl-0 = <&uart0_pb_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&usb_otg {
	dr_mode = "otg";
	status = "okay";
};

&usbphy {
	usb0_id_det-gpio = <&pio 5 6 GPIO_ACTIVE_HIGH>;
	status = "okay";
};

&emac {
	phy-handle = <&int_mii_phy>;
	phy-mode = "mii";
	allwinner,leds-active-high;
	status = "okay";
};

&pio {
    spi0_cs_pins: spi0_cs_pins {
        pins = "PC2", "PE0", "PE1", "PE2";
        function = "gpio_out";
    };
};

&spi0 {
	pinctrl-0 = <&spi0_pins &spi0_cs_pins>;
	cs-gpios = <&pio 2 2 GPIO_ACTIVE_LOW>, <&pio 4 0 GPIO_ACTIVE_LOW>, <&pio 4 1 GPIO_ACTIVE_LOW>, <&pio 4 2 GPIO_ACTIVE_LOW>;
	status = "okay";

	can0: can@0 {
		compatible = "microchip,mcp2515";
		reg = <0>;
		clocks = <&osc24M>;
		interrupt-parent = <&pio>;
		interrupts = <1 5 IRQ_TYPE_EDGE_FALLING>; /* PB5 */
		spi-max-frequency = <10000000>;
	};

	can1: can@1 {
		compatible = "microchip,mcp2515";
		reg = <1>;
		clocks = <&osc24M>;
		interrupt-parent = <&pio>;
		interrupts = <1 4 IRQ_TYPE_EDGE_FALLING>; /* PB4 */
		spi-max-frequency = <10000000>;
	};

	can2: can@2 {
		compatible = "microchip,mcp2515";
		reg = <2>;
		clocks = <&osc24M>;
		interrupt-parent = <&pio>;
		interrupts = <1 3 IRQ_TYPE_EDGE_FALLING>; /* PB3 */
		spi-max-frequency = <10000000>;
	};

	can3: can@3 {
		compatible = "microchip,mcp2515";
		reg = <3>;
		clocks = <&osc24M>;
		interrupt-parent = <&pio>;
		interrupts = <1 2 IRQ_TYPE_EDGE_FALLING>; /* PB2 */
		spi-max-frequency = <10000000>;
	};
};
